var page = <%=params[:page] || 1%>;
var path = '/books';
if (page !== 1) path += '?page=' + page;

if (location.href !== location.origin + path) {
    history.pushState({scrollTopBody: document.body.scrollTop}, `Book ${page}`, path);
    document.title = 'Book ' + page;
}
$("#part-of-books").text("data from page " + page);
