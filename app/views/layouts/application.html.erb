              <%=link_to settings_path, class: 'btm-panel-menu' do%>
                  <div class="carcass-panel-menu"><div class="icon-menu icon-account"></div></div><div class="text-btm-panel-menu">Профиль</div>
              <%end%>
        <%end%>
        <%=link_to users_path, class: 'btm-panel-menu' do%>
