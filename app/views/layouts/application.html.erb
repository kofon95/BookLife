        <%end%>
        <a href="#" role="button" class="btm-panel-menu"><div class="carcass-panel-menu"><div class="icon-menu icon-community"></div></div><div class="text-btm-panel-menu">Сообщества</div></a>
      </div>

      <div class="head-continue">
        <img class="img-head-continue" src="/images/ico/book.jpg">
        <span class="text-head-continue">Продолжить...</span>

        <div class="head-reveal-history-of-reading"><div></div></div>
      </div>



      <% if signed_in? %>
          <div class="head-user-panel">
            <img class="img-head-user-panel" src="<%=current_user.thumbnail%>">

            <div class="text-head-user-panel">
              <div class="name-head-user-panel"><%=user_full_name current_user%></div>
              <a href="/" class="subscription-head-user-panel"><div></div>Без подписки</a>
            </div>

            <div class="notification-head-user-panel"><div class="icon-notification"></div><div class="alerts-left-menu">0</div></div>
            <div class="bottom-arrow-head-user-panel"><div></div></div>

          </div>
